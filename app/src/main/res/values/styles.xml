<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button">

        <item name="android:text">@string/Default</item>


        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>


        <item name="cornerRadius">25dp</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">#645C51</item>
        <item name="android:backgroundTint">#BFFFFFFF</item>
        <item name="rippleColor">#00645C51</item>
        <item name="android:textSize">3pt</item>
        <item name="android:fontFamily">@font/mplusr1c_medium</item>


        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>

    </style>

    <style name="OrangeButton" parent="Widget.MaterialComponents.Button">

        <item name="android:text">@string/Default</item>


        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="android:layout_marginRight">80dp</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:paddingRight">70dp</item>

        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">#645C51</item>
        <item name="android:textSize">6pt</item>
        <item name="android:backgroundTint">@color/orange</item>


        <item name="android:stateListAnimator">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="rippleColor">#00645C51</item>
    </style>

</resources>
